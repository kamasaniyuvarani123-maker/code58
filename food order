#include <stdio.h>
int main() {
    int choice, qty;
    float total = 0;
 printf("------ FOOD MENU ------\n");
    printf("1. Pizza    - Rs.150\n");
    printf("2. Burger   - Rs.80\n");
    printf("3. Dosa     - Rs.60\n");
    printf("4. Idli     - Rs.40\n");
    printf("-----------------------\n");
  printf("Enter your choice: ");
    scanf("%d", &choice);
 printf("Enter quantity: ");
    scanf("%d", &qty);
 switch (choice) {
        case 1:
            total = qty * 150;
            printf("Pizza ordered\n");
            break;
        case 2:
            total = qty * 80;
            printf("Burger ordered\n");
            break;
        case 3:
            total = qty * 60;
            printf("Dosa ordered\n");
            break;
        case 4:
            total = qty * 40;
            printf("Idli ordered\n");
            break;
        default:
            printf("Invalid choice");
            return 0;
    }
 printf("Total bill = Rs. %.2f", total);
 return 0;
}
